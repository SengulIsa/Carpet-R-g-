@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b> Search customer:</b> @Html.TextBox("p")
        <input type="submit" value="Search" />
    </p>
}
<table id="tbl3" class="table table-bordered">
    <thead>

        <tr>
            <th>CUSTOMER ID</th>
            <th>CUSTOMER NAME</th>
            <th>CUSTOMER SURNAME</th>
            <th>DELETE</th>
            <th>UPDATE</th>


        </tr>

    </thead>
    <tbody>
        @foreach (var mstr in Model)
        {
            <tr>
                <th>@mstr.MUSTERIID</th>
                <td>@mstr.MUSTERIAD</td>
                <td>@mstr.MUSTERISOYAD</td>
                <td> <a href="/Musteri/SIL/@mstr.MUSTERIID" class="btn btn-danger">DELETE</a></td>
                <td> <a href="/Musteri/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">UPDATE</a></td>





            </tr>
        }
    </tbody>

</table>

<a href="/Musteri/YeniMüşteri/" class="btn btn-primary" id="btn1">Add New Customer</a>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl3').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>

