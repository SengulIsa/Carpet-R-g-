@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLCATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<table id="tbl2" class="table table-bordered">
    <thead>
        <tr>
            <th>CATEGORY ID</th>
            <th>CATEGORY NAME</th>
            <th>DELETE</th>
            <th>UPDATE</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.CATEGORIID</th>
                <td>@ktgr.CATEGORIAD</td>
                <td> <a href="/CATEGORI/SIL/@ktgr.CATEGORIID" class="btn btn-danger">DELETE</a></td>
                <td> <a href="/CATEGORI/KategoriGetir/@ktgr.CATEGORIID" class="btn btn-success">UPDATE</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/CATEGORI/YeniKategori/" class="btn btn-primary">ADD NEW CATEGORY</a>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl2').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>


